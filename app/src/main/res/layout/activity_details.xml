<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res_auto"
    xmlns:card_view2="http://schemas.android.com/apk/re_auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ScrollingActivity"
    tools:showIn="@layout/activity_scrolling">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/our_services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Service Description"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="30dp"
            android:textColor="#CC8010"
            android:fontFamily="@font/montserrat_semibold">
        </TextView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/re_auto"
            android:id="@+id/card2"
            android:layout_margin="5dp"
           android:layout_marginTop="10dp"
            card_view:cardCornerRadius="4dp"
            android:layout_below="@id/our_services">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/coach_des"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:justificationMode="inter_word"
                    android:layout_marginStart="5dp"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/content_des2"
                    android:background="@drawable/buses_two"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/more_images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="More Images"
            android:layout_below="@id/card2"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="30dp"
            android:textColor="#CC8010"
            android:fontFamily="@font/montserrat_semibold">
        </TextView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/re_auto"
            android:id="@+id/card4"
            android:layout_below="@id/more_images"
            android:layout_margin="5dp"
            android:paddingBottom="20dp"
            card_view:cardCornerRadius="4dp">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">
                <LinearLayout android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout android:orientation="vertical"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="120dp"
                            android:layout_weight="1.0"
                            android:scaleType="centerCrop"
                            android:contentDescription="content_des3"
                            android:background="@drawable/buses_one"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/coaches"
                            android:layout_marginBottom="10dp"
                            android:justificationMode="inter_word"
                            android:fontFamily="@font/montserrat_semibold"
                            android:layout_marginStart="5dp"/>
                    </LinearLayout>

                    <LinearLayout android:orientation="vertical"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="120dp"
                            android:layout_weight="1.0"
                            android:scaleType="centerCrop"
                            android:contentDescription="@string/content_des3"
                            android:background="@drawable/buses_two"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/coaches"
                            android:layout_marginBottom="10dp"
                            android:justificationMode="inter_word"
                            android:fontFamily="@font/montserrat_semibold"
                            android:layout_marginStart="5dp"/>
                    </LinearLayout>

                    <LinearLayout android:orientation="vertical"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="120dp"
                            android:layout_weight="1.0"
                            android:scaleType="centerCrop"
                            android:contentDescription="@string/content_des3"
                            android:background="@drawable/buses_three"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/coaches"
                            android:layout_marginBottom="10dp"
                            android:justificationMode="inter_word"
                            android:fontFamily="@font/montserrat_semibold"
                            android:layout_marginStart="5dp"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="vertical"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="120dp"
                            android:layout_weight="1.0"
                            android:scaleType="centerCrop"
                            android:contentDescription="@string/content_des3"
                            android:background="@drawable/buses_four"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/coaches"
                            android:layout_marginBottom="10dp"
                            android:justificationMode="inter_word"
                            android:fontFamily="@font/montserrat_semibold"
                            android:layout_marginStart="5dp"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="vertical"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="120dp"
                            android:layout_weight="1.0"
                            android:scaleType="centerCrop"
                            android:contentDescription="@string/content_des3"
                            android:background="@drawable/buses_five"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/coaches"
                            android:layout_marginBottom="10dp"
                            android:justificationMode="inter_word"
                            android:fontFamily="@font/montserrat_semibold"
                            android:layout_marginStart="5dp"/>
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </androidx.cardview.widget.CardView>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:onClick="bookService"
            android:text="B O O K   S E R V I C E"
            android:background="#CC8010"
            android:layout_below="@id/card4"
            android:layout_marginTop="20dp"
            android:layout_margin="20dp"
            android:layout_marginBottom="20dp"/>

    </RelativeLayout>
</androidx.core.widget.NestedScrollView>